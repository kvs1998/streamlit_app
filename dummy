import streamlit as st
from pathlib import Path
import base64

# Load image as base64
image_path = Path(__file__).parent / "images" / "blackrock_logo.png"
with open(image_path, "rb") as img_file:
    encoded_img = base64.b64encode(img_file.read()).decode()

# Sidebar content
st.sidebar.header("My Dashboard")
st.sidebar.write("Some sidebar content...")

# Place image at the bottom of the sidebar
st.sidebar.markdown(
    f"""
    <div style="position: fixed; bottom: 10px; left: 10px;">
        <img src="data:image/png;base64,{encoded_img}" width="150">
    </div>
    """,
    unsafe_allow_html=True
)
